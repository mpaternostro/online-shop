</head>

<body>
<%- include('../includes/navigation.ejs') %>

  <main class="centered">
    <% if(product) { %>
      <h1><%= product.title %></h1>
      <div class="image">
        <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
      </div>
      <h2><%= product.price %></h2>
      <p><%= product.description %></p>
      <% if (isAuthenticated) { %> 
        <%- include('../includes/add-to-cart.ejs') %>
      <% } %>
    <% } else { %>
      <h1>Product not found</h1>
    <% } %>
  </main>
<%- include('../includes/end.ejs') %>
